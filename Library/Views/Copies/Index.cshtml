@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Copies</h1>

@if (@Model.Count == 0)
{
  <h3>Theres only one of each book!</h3>
} 

<ul>
  @foreach(Copy copy  in Model)
  {
    <li>@Html.ActionLink($"{copy.Book.Title}", "Details", new { id = copy.CopyId })</li>
  }
</ul>

<p>@Html.ActionLink("Add copies", "Create")</p>
