@{
  Layout = "_Layout";
}

@model Library.Models.Book

<h4>Add a new book</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Title)
    @Html.TextBoxFor(model => model.Title)
    @Html.LabelFor(model => model.Series)
    @Html.TextBoxFor(model => model.Series)
    @Html.LabelFor(model => model.Genre)
    @Html.TextBoxFor(model => model.Genre)
    @Html.LabelFor(model => model.Published)
    @Html.TextBoxFor(model => model.Published, new { type = "date"})


    <input type="submit" value="Add new book" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all books", "Index")</p>